extends layout 

block content 
    .w3-card-4
        .header.w3-container.w3-orange 
            h2 Student Form
        form.w3-container(method='POST', action=`/alunos/edit/${a.id}`)
            fieldset 
                legend Metadata
                label Id
                input.w3-input.w3-round(type='text', name='id', readonly, value=a.id)
                label Name
                input.w3-input.w3-round(type='text', name='nome', value=a.nome)
                label Git
                input.w3-input.w3-round(type='text', name='gitlink', value=a.gitlink)
            fieldset
                legend TPC
                 each num in [1, 2, 3, 4, 5, 6, 7, 8]
                    - var tpcField = 'tpc' + num
                    input.w3-check(type='checkbox', name=tpcField, value='1', checked=a[tpcField])
                    label= 'TPC' + num
            br
            button.w3-btn.w3-orange.w3-mb-2(type='submit') Register
        footer.w3-container.w3-orange
            h5 Generated by EngWeb2023 in #{d}



