extends layout

block content
    .w3-card-4
        .header.w3-container.w3-purple 
            h2 Student Form
        form.w3-container(method='POST', action= '/alunos')
            fieldset 
                legend Metadata
                name
                label Id
                input.w3-input.w3-round(type='text', name='id', required)
                label Name
                input.w3-input.w3-round(type='text', name='nome', required)
                label Git
                input.w3-input.w3-round(type='text', name='gitlink', required)
            fieldset
                - var tpcs = [1, 2, 3, 4, 5, 6, 7, 8]
                each num in tpcs
                    input.w3-check(type='checkbox', name='tpc'+num, value='1')
                    label= 'TPC' + num
            br
            button.w3-btn.w3-purple.w3-mb-2(type='submit') Register
        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d}
                