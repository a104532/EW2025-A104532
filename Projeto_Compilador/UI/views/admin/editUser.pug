extends ../layout

block content
  .w3-container.w3-margin-top(style="max-width: 700px;")
    h2 Editar Utilizador

    form(method="POST" action=`/admin/users/${targetUser._id}/edit`)
      .w3-section
        label(for="email") Email
        input.w3-input.w3-border(type="email", name="email", required, value=targetUser.email)

      button.w3-button.w3-green(type="submit")
        i.fa.fa-save
        |  Guardar

    a.w3-button.w3-grey(href="/admin/users")
      i.fa.fa-arrow-left
      |  Cancelar

