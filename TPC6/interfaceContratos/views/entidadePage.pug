extends layout
block content
  .w3-card-4
    header.w3-container.w3-green
      h1= tit

    .w3-container
      h2 Entidade: #{entidade}
      h3 NIPC: #{nipc}
      
      h3 Somatório do valor dos contratos: #{soma} €

      table.w3-table-all
        tr
          th ID Contrato
          th Objeto do Contrato
          th Data de Celebração
          th Preço Contratual
        each contrato in lcontratos
          tr
            td
              a(href=`/` + contrato._id)= contrato._id
            td= contrato.objectoContrato
            td= contrato.dataCelebracaoContrato
            td= contrato.precoContratual

    footer.w3-container.w3-green
      a.w3-btn.w3-green.w3-round(href='/') Voltar à Página Principal