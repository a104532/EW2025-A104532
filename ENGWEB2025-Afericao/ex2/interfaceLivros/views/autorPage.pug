extends layout
block content
  .w3-container.w3-padding
    h1= autorNome
    p
      strong ID do Autor: 
      span= autorId
    p
      strong Nome do Autor: 
      span= autorNome
    p
      strong Total de Livros: 
      span= totalLivros
    table.w3-table-all
      thead
        tr
          th ID
          th Título
          th Data de Publicação
          th Páginas
      tbody
        each livro in livros
          tr
            td
              a(href='/livro/' + livro._id)= livro._id
            td= livro.title
            td= livro.publishDate
            td= livro.pages
    a(href='/') Voltar à página principal