extends layout
block content
  .w3-card-4
    .header.w3-container.w3-yellow
      h1= ator
      h2 Participação nos filmes:
    .w3-container
      table.w3-table-all
        tr
          th Ano
          th Titulo
          th Géneros
        each f in filmes
          tr
            td= f.ano
            td= f.titulo
            td
              ul.w3-ul
                each genre in f.genero
                  li= genre
    footer.w3-container.w3-yellow
      address Generated by Tomás Barbosa in #{d} - 
        a(href='/') Return
        