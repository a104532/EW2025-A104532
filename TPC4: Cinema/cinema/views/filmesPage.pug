extends layout
block content
  .w3-card-4
    header.w3-container.w3-orange
      h1= tit
    .w3-container
      table.w3-table-all
        tr
          th Ano
          th Titulo
          th Elenco
          th Géneros
          th.w3-center Opções
        each f in lfilmes
          tr
            td= f.ano
            td= f.titulo
            td
              ul.w3-ul
                each ator in f.atores
                  li
                    a(href=`/filmes/` + ator)= ator
            td
              ul.w3-ul
                each genre in f.genero
                  li= genre
            td.w3-center
              .w3-row
                .w3-col.s12.w3-center
                  a.w3-btn.w3-green.w3-round.w3-margin-bottom(href=`/edit/` + f.id) Editar
                  a.w3-btn.w3-red.w3-round.w3-margin-bottom(href=`/delete/` + f.id, onclick="return confirm('Are you sure you want to delete this film?')") Apagar
    footer.w3-container.w3-orange
      address Generated by Tomás Barbosa in #{date} - 
        a(href='/') Return

  

