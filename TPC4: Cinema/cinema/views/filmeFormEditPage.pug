extends layout
block content
  .w3-card-4
    .header.w3-container.w3-orange
      h2 Edit Film
    form.w3-container(method='POST')
      fieldset
        legend Metadata
        input(type='hidden', name='tituloAntigo', value=f.titulo)
        label Titulo
        input.w3-input.w3-margin-bottom(type='text', name='titulo', value=f.titulo)
        label Ano
        input.w3-input.w3-margin-bottom(type='number', name='ano', value=f.ano)
        label Atores
        if f.atores.length > 0
          input.w3-input.w3-margin-bottom(type='text', name='atores', value=f.atores.join(', '))
        else
          input.w3-input.w3-margin-bottom(type='text', name='atores', value='')
        label Generos
        if f.genero.length > 0
          input.w3-input.w3-margin-bottom(type='text', name='genero', value=f.genero.join(', '))
        else
          input.w3-input.w3-margin-bottom(type='text', name='genero', value='')
      .w3-row.w3-margin-top.w3-margin-bottom
        .w3-col.s12.w3-center
          button.w3-btn.w3-green.w3-round.w3-margin-right(type='submit') Save
          a.w3-btn.w3-red.w3-round.w3-margin-left(href='/') Cancel
    footer.w3-container.w3-orange
      address Generated by Tom√°s Barbosa in #{d} - 
        a(href='/') Return